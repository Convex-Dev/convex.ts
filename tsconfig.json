{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 